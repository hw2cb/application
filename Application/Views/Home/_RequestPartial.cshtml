@model List<Application.Models.Item>
  
<div class="panel panel-info">
    <div class="panel-heading"><h3>Позиция:</h3></div>
    <div class="panel-body">
        <div class="form-group">
            <label>Список:</label>
            @Html.DropDownListFor(x => x[i].SubjectId, ViewBag.SelItems as SelectList)
        </div>
        <div class="form-group">
            <label>Количество:</label>

            @Html.TextBoxFor(x => x[i].Quantity)
        </div>
        <div class="form-group">
            <label>Комментарий:</label>
            @Html.TextBoxFor(x => x[i].Description)
        </div>
    </div>
</div>